# Server
PORT=8000
NODE_ENV=production

# CORS - 填写 Render 前端域名，多个用逗号分隔
ALLOWED_ORIGINS=https://your-frontend.onrender.com

# DashScope API (CosyVoice-v2 TTS)
DASHSCOPE_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Storage - Render 免费版文件系统是临时的，重启后丢失
STORAGE_TYPE=local
STORAGE_PATH=/tmp/uploads

# X402 Payment (可选)
X402_RECEIVER=0x742d35Cc6634C0532925a3b844Bc454e4438f44e
X402_NETWORK=base-sepolia
X402_PRICE=0.01
